<h2>New Site Form</h2>
<%= form_for @site do |f|%>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
   <!-- Collection of checkboxes for equipment ids -->
<p></p>
    <div>
        <%= f.label "Select Tasks" %>
        <div>
            <p><%= f.collection_select(:task_ids, Task.all, :id, :name) %></p>
        </div>
    </div>
    <!-- 3 New Equipment Fields -->
               
            <%= f.fields_for :task do |task_field| %>
                <%= task_field.label :name %>
                <div>
                    <%= task_field.text_field :name %>
                </div>
            <% end %>
         <%= f.submit "Create Site" %>
<%end%>