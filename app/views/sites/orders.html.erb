<h1><%= @site.name %> Answers</h1>

<%= form_for(@site) do |f| %>
  <% @users.each do |user| -%>
  <h3><%= user.name %></h3>
  <table>
    <thead>
      <tr>
        <td>Tasks</td>
        <td>Order</td>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| -%>
      <tr>
        <td><%= task.name %></td>
        <td>
        <%= f.fields_for :tasks, task do |q| -%>
          <%= q.fields_for :orders, question.answers.find_or_initialize_by(user: user) do |a| -%>
            <%= a.text_area :content %>
            <%= a.hidden_field :user_id, user.id %>
          <% end -%>
        <% end -%>
        </td>
      </tr>
      <% end -%>
    </tbody>
  </table>
  <% end -%>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end -%>