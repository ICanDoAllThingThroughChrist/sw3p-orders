<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
 
<h1><%= @user.name %></h1>
<p>Tasks:</p>
<% @user.tasks.each do |task| %>
  <div><%= task.name %> - <%= last_updated task %></div>
<% end %>