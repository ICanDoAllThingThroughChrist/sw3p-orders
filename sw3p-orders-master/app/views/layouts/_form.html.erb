<%= render "layouts/errors", :object => @order %>
    
<%= form_for @order do |f| %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :site_id %> 
    <%= f.label :task %>
    <%= f.select :task, ['task1', 'task2'] %>
    <%= f.label :deadline %>
    <%= f.select :deadline, ['deadline1', 'deadline2'] 
    <%= f.label :frequency %>
    <%= f.select :frequency, ['freqs1', 'freqs2'] %>
    <%= f.label :comment %>
    <%= f.fields_for :comments do |comment_form| %>
        Comment : <%= comment_form.text_field :comment %>
     <% end %><br>
     <p><%= f.submit "Edit"%></p>
<% end %>