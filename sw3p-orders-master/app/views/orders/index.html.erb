<!DOCTYPE html>
<html>
<head>
<style>
table {
    width:100%;
}
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th, td {
    padding: 5px;
    text-align: left;
}
table#t01 tr:nth-child(even) {
    background-color: #eee;
}
table#t01 tr:nth-child(odd) {
   background-color:#fff;
}
table#t01 th {
    background-color: black;
    color: white;
}
</style>
</head>
<body>
<table id="t01" style="width:20%">
<style type="text/css">
   table {
    overflow:scroll;
}
   tr    { page-break-inside:avoid; page-break-after:auto }
</style>
<%= form_tag(orders_url, method: "get") do %>
    <%= select_tag "task", options_for_select(["task1", "task2"]), include_blank: true %>
    <%= select_tag "site_name", options_for_select(["NE", "NW", "SW", "SE", "NW_Transfer_Station","SW_Transfer_Station", "SE_Transfer_Station" ]), include_blank: true %>
    <%= submit_tag "Filter" %>
<% end %>
  <tr>
    <th>ID</th>
    <th>Task</th>
    <th>Frequency</th> 
    <th>Site Name</th>
    <th>Edit order</th>
    <th>Attachment</th>
    <th>Attachment Size</th>
  </tr>

  <div>
    <% if !params[:order].blank? %>
    <% @orders = Order.where(id: params[:order][:id]) %>
    <% end %>
  </div>
  <% if @orders != nil %>
    <tr><% @orders.each do |order| %></tr>
        <% orderid = order.id %>
        <td><%= orderid%></td>
        <td><%= order.task %></td>
        <td><%= order.frequency %></td>
        <%# binding.pry  %>
            <% if order.site != nil %>
                <td><%= order.site.name %></td>
            <% else %>
                <td><%= "'no site selected'" %></td>
            <% end %></td>
        <%# binding.pry %>
            <%# binding.pry %>
        <td><%= link_to 'edit order', site_order_url(order.site, order), method: :get %>
        <% if order.attachment.present? %>
        <div class="attachment">
        <p>
            <% binding.pry %>
            <td><%= link_to File.basename(order.attachment.url),
            order.attachment.url %></td>
            <td><%=number_to_human_size(order.attachment.size)%></td>
            </p>
         </div>
    <% end %>
        <% end %>
    <% else %>
        <h3><% "no orders are in the db" %></h3>
        <% redirect_to site_orders_url %>
    <% end %>
  </table>
</body>
</html>

