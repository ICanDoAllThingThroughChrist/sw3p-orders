<h1> edit order </h1>
<%#= render "layouts/errors", object: f.object %> 
<%= form_for @order, url: {action: "update"}, html: {class: "nifty_form"} do |f| %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :site_id %> 
    <div class="field">
      <%= f.label :task %><br>
      <%= f.select :task, ['task1', 'task2'] %><br>
    </div>
    <div class="field">
        <%= f.label :frequency %><br>
        <%= f.select :frequency, ['freqs1', 'freqs2'] %><br>
     </div>
     <div class="field">
        <%= f.label :deadline %><br>
        <%= f.select :deadline, ['deadline1', 'deadline2'] %><br>
     </div>
     <div class="field">
        <%= f.label :comment %><br />
        <%= f.text_field :comment_names %>
     </div>
<%= f.submit "Update" %>
<% end %>