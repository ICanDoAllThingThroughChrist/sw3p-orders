<fieldset>
<h2><%= @site.name %> has following orders:</h2>  
<% @site.orders.each do |order| %>
  <% orderid = order.id %>
<li><%= link_to orderid, site_order_path(@site, order), method: :get %></li>
  <%# binding.pry %>
<% end %>
<p><%= link_to 'create a new order for site and task', new_site_order_path(@site) %></p>
</fieldset>
<fieldset>
<h2><%= @site.name %> has following tasks:</h2> 
<% binding.pry %> 
<% @site.tasks.each do |task| %>
<% taskid = task.id%>
<li><%= link_to taskid, site_task_path(@site, task), method: :get %></li>
<% binding.pry %>
<% end %>
<p><%= link_to 'create a new task for the site', new_site_task_path(@site) %></p>
<% binding.pry %>
</fieldset>